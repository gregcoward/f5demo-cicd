{
 "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "namePrefix": {
      "type": "string"
    },
    "location": {
      "type": "string"

    }
  },
  "variables": {
    "storageAccountType": "Standard_LRS",
    "publicIPAddressID": "[resourceId('Microsoft.Network/publicIPAddresses',concat(parameters('namePrefix'), 'pip'))]",
    "lbID": "[resourceId('Microsoft.Network/loadBalancers',concat(parameters('namePrefix'), 'lb'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/availabilitySets",
      "tags": {
        "displayName": "Availability Set"
      },
      "name": "[concat(parameters('namePrefix'), 'avset')]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('location')]",
      "properties": { }
    },
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/publicIPAddresses",
      "tags": {
        "displayName": "Public IP Address"
      },
      "name": "[concat(parameters('namePrefix'), 'pip')]",
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[parameters('namePrefix')]"
        }
      }
    },
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/networkSecurityGroups",
      "tags": {
        "displayName": "Network Security Group"
      },
      "name": "[concat(parameters('namePrefix'), 'nsg')]",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          {
            "name": "ssl_rule",
            "properties": {
              "description": "",
              "priority": 101,
              "sourceAddressPrefix": "*",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "443",
              "protocol": "Tcp",
              "direction": "Inbound",
              "access": "Allow"
            }
          },
          {
            "name": "http_rule",
            "properties": {
              "description": "",
              "priority": 102,
              "sourceAddressPrefix": "*",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "80",
              "protocol": "Tcp",
              "direction": "Inbound",
              "access": "Allow"
            }
          },
          {
            "name": "ssh_rule",
            "properties": {
              "description": "",
              "priority": 103,
              "sourceAddressPrefix": "*",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "22",
              "protocol": "Tcp",
              "direction": "Inbound",
              "access": "Allow"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2015-05-01-preview",
      "name": "[concat(parameters('namePrefix'), 'lb')]",
      "type": "Microsoft.Network/loadBalancers",
      "tags": {
        "displayName": "Azure Load Balancer"
      },
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/',parameters('namePrefix'), 'pip')]"
      ],
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "LoadBalancerFrontend",
            "properties": {
              "publicIPAddress": {
                "id": "[variables('publicIPAddressID')]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "LoadBalancerBackend"
          }
        ],
        "loadBalancingRules": [
            {
              "name": "appLBRule80",
              "location": "[parameters('location')]",
              "properties": {
                "frontendIPConfiguration": {
                  "id": "[concat(variables('lbID'),'/frontendIPConfigurations/loadBalancerFrontend')]"
                },
                "backendAddressPool": {
                  "id": "[concat(variables('lbID'),'/backendAddressPools/LoadBalancerBackend')]"
                },
                "protocol": "Tcp",
                "frontendPort": 80,
                "backendPort": 880,
                "enableFloatingIP": false,
                "idleTimeoutInMinutes": 5,
                "probe": {
                  "id": "[concat(variables('lbID'),'/probes/tcpProbe')]"
                }
              }
            },
            {
              "name": "appLBRule443",
              "location": "[parameters('location')]",
              "properties": {
                "frontendIPConfiguration": {
                  "id": "[concat(variables('lbID'),'/frontendIPConfigurations/loadBalancerFrontend')]"
                },
                "backendAddressPool": {
                  "id": "[concat(variables('lbID'),'/backendAddressPools/LoadBalancerBackend')]"
                },
                "protocol": "Tcp",
                "frontendPort": 443,
                "backendPort": 8443,
                "enableFloatingIP": false,
                "idleTimeoutInMinutes": 5,
                "probe": {
                  "id": "[concat(variables('lbID'),'/probes/tcpProbe443')]"
                }
              }
            }
          ],
            "inboundNatRules": [
              {
                "name": "ssh-vm0",
                "properties": {
                  "frontendIPConfiguration": {
                    "id": "[concat(variables('lbID'),'/frontendIPConfigurations/loadBalancerFrontend')]"
                  },
                  "protocol": "Tcp",
                  "frontendPort": 8022,
                  "backendPort": 22,
                  "enableFloatingIP": false
                }
              },
              {
                "name": "ssh-vm1",
                "properties": {
                  "frontendIPConfiguration": {
                    "id": "[concat(variables('lbID'),'/frontendIPConfigurations/loadBalancerFrontend')]"
                  },
                  "protocol": "Tcp",
                  "frontendPort": 8023,
                  "backendPort": 22,
                  "enableFloatingIP": false
                }
              },
              {
                "name": "ssh-sql",
                "properties": {
                  "frontendIPConfiguration": {
                    "id": "[concat(variables('lbID'),'/frontendIPConfigurations/loadBalancerFrontend')]"
                  },
                  "protocol": "Tcp",
                  "frontendPort": 8024,
                  "backendPort": 22,
                  "enableFloatingIP": false
                }
              },
              {
                "name": "ssh-waf0",
                "properties": {
                  "frontendIPConfiguration": {
                    "id": "[concat(variables('lbID'),'/frontendIPConfigurations/loadBalancerFrontend')]"
                  },
                  "protocol": "Tcp",
                  "frontendPort": 8025,
                  "backendPort": 22,
                  "enableFloatingIP": false
                }
              },
              {
                "name": "ssh-waf1",
                "properties": {
                  "frontendIPConfiguration": {
                    "id": "[concat(variables('lbID'),'/frontendIPConfigurations/loadBalancerFrontend')]"
                  },
                  "protocol": "Tcp",
                  "frontendPort": 8026,
                  "backendPort": 22,
                  "enableFloatingIP": false
                }
              },
              {
                "name": "gui-waf0",
                "properties": {
                  "frontendIPConfiguration": {
                    "id": "[concat(variables('lbID'),'/frontendIPConfigurations/loadBalancerFrontend')]"
                  },
                  "protocol": "Tcp",
                  "frontendPort": 8027,
                  "backendPort": 443,
                  "enableFloatingIP": false
                }
              },
              {
                "name": "gui-waf1",
                "properties": {
                  "frontendIPConfiguration": {
                    "id": "[concat(variables('lbID'),'/frontendIPConfigurations/loadBalancerFrontend')]"
                  },
                  "protocol": "Tcp",
                  "frontendPort": 8028,
                  "backendPort": 443,
                  "enableFloatingIP": false
                }
              }
            ],
            "probes": [
              {
                "name": "tcpProbe",
                "properties": {
                  "protocol": "Tcp",
                  "port": 880,
                  "intervalInSeconds": 5,
                  "numberOfProbes": 2
                }
              },
              {
                "name": "tcpProbe443",
                "properties": {
                  "protocol": "Tcp",
                  "port": 8443,
                  "intervalInSeconds": 5,
                  "numberOfProbes": 2
                }
              }
            ]
          }
    }
  ],
  "outputs": {
        "Infrastructure Deployment Status": {
          "type": "string",
          "value": "Successful"
        }
  }
}
